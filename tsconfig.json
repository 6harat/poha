{
    "compilerOptions": {
      "module": "commonJs",
      "alwaysStrict": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "allowJs": true,
      "checkJs": true,
      "jsx": "react",
      "paths": {
        "*": ["node_modules/*"]
      },
      "resolveJsonModule": true,
      "types": [
        "react"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "node_modules/@types/react-native/globals.d.ts"
    ]
  }