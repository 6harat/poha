{
    "compilerOptions": {
      "module": "commonJs",
      "alwaysStrict": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "allowJs": true,
      "checkJs": true,
      "jsx": "react",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }